<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.HomeDoor.AppWidgetContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/appwidget"
        style="@style/Widget.HomeDoor.AppWidget.InnerView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="4dp"
        android:clickable="true"
        android:src="@drawable/baseline_lock_open_white_24"
        android:focusable="true" />

    <TextView
        android:id="@+id/appwidget_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/unlock_btn"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_margin="4dp"

        android:contentDescription="@string/unlock_btn" />
</LinearLayout>